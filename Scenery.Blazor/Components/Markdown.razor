
@((MarkupString)BuildHtmlFormMarkDown(Content))

@functions
{
    [Parameter]
    public string Content { get; set; }

    private string BuildHtmlFormMarkDown(string content) => 
        content == null 
        ? 
            "" 
        :
            Markdig.Markdown.ToHtml(
                markdown: content,
                pipeline: new Markdig.MarkdownPipelineBuilder().Build()
            );
}